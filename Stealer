local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true  -- Ensures it covers the whole screen, ignoring the top bar
screenGui.Parent = game.CoreGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(1, 0, 1, 0)  -- Full screen size
frame.Position = UDim2.new(0, 0, 0, 0)  -- Top-left corner
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)  -- Black background
frame.Parent = screenGui

local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(0.3, 0, 0.1, 0)  -- Size relative to screen
loadingText.Position = UDim2.new(0.35, 0, 0.45, 0)  -- Center the text
loadingText.Text = "Loading... Please Wait 60 Seconds"
loadingText.Font = Enum.Font.SourceSans
loadingText.TextSize = 36
loadingText.TextColor3 = Color3.fromRGB(255, 255, 255)  -- White text color
loadingText.BackgroundTransparency = 1  -- Transparent background for the text
loadingText.Parent = frame

-- TweenService for fade animation
local tweenService = game:GetService("TweenService")

local function fadeText()
    local tweenInfo = TweenInfo.new(1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1, true)
    local goal = {TextTransparency = 0.5}
    local tween = tweenService:Create(loadingText, tweenInfo, goal)
    tween:Play()
end

fadeText()

wait(60)

screenGui:Destroy()
